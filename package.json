{
  "name": "nodebootstrap-server",
  "version": "2.1.0",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "description": "Server Component of NodeBootstrap",
  "author": "Irakli Nadareishvili",
  "license": "MIT",
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/inadarei/nodebootstrap-server"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "body-parser": "^1.19",
    "config": "^3.3.6",
    "connect-multiparty": "^2.1.0",
    "express": "^4.17.1",
    "metalogger": "^2.2.1",
    "method-override": "^3.0.0",
    "lodash.foreach": "^4.5.0",
    "helmet": "*"
  },
  "devDependencies": {
    "blue-tape": "^1.0.0",
    "coveralls": "^3.0.0",
    "eslint": "^7.24.0",
    "fakepromise": "^1.0.5",
    "metalogger": "^2.2.0",
    "node-fetch": "^2.2.0",
    "nyc": "^15.1",
    "tap-nirvana": "^1.1.0",
    "tape": "^5.2.2"
  },
  "scripts": {
    "lint": "eslint lib test *.js",
    "lint-fix": "eslint --fix lib test",
    "pretest": "npm run lint",
    "test": "export NODE_TAPE_OBJECT_PRINT_DEPTH=infinity && nyc blue-tape test/**/*-test.js | tap-nirvana ",
    "test-fast": "blue-tape test/**/*-test.js | tap-nirvana",
    "tape": "blue-tape test/**/*-test.js",
    "test-cov": "nyc blue-tape test/**/*-test.js"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": [
      50,
      80
    ],
    "statements": [
      55,
      80
    ],
    "functions": [
      55,
      80
    ],
    "branches": [
      55,
      80
    ],
    "include": [
      "lib/**/*.js",
      "lib/*.js",
      "test/**/*.js",
      "*.js"
    ],
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "all": true,
    "report-dir": "./coverage"
  }
}
